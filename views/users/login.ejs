<% layout('layouts/boilerplate') %>
 <div class="row">
  <div class="col-6 offset-3">
            <h3>login</h3>
<form action="/login" method="POST" class="validated-form" novalidate>
  <div class="mb-2">
      <label for="username" class="form-label">Username: </label>
      <input type="text" id="username" name="username" autocomplete="off" class="form-control" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-2">
      <label for="password" class="form-label">Password: </label>
      <input type="password" id="password" name="password" autocomplete="off" class="form-control" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-2">
      <a href="/register"></a>
    </div>
    <div class="mb-3">
    <button class="btn btn-success btn-block">Login</button>
  </div>
    
</form>
  </div>
 </div>
